{
  "base_model": "Qwen/Qwen3-4B-Instruct-2507",
  "adapter_name": "LORA",
  "training_params": {
    "max_length": 4096,
    "per_device_train_batch_size": 2,
    "per_device_eval_batch_size": 2,
    "num_train_epochs": 10,
    "learning_rate": 2e-5,
    "weight_decay": 0.01,
    "fp16": true,
    "eval_strategy": "epoch",
    "save_strategy": "epoch",
    "load_best_model_at_end": true,
    "push_to_hub": false,
    "report_to": ["wandb"],
    "metric_for_best_model": "rougeL",
    "greater_is_better": true,
    "save_only_model": true,
    "save_total_limit": 1
  },
  "data": {
    "train": "./data/train.jsonl",
    "val": "./data/val.jsonl",
    "test": "./data/test.jsonl"
  },
  "artifacts_dir": "./experiments_artifacts"
}
